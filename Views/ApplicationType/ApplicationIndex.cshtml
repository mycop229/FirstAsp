@model IEnumerable<Tor.Models.ApplicationType>
 <div class="container p-3">

        <div class="row pt-4">


            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>


            <div class="col-6 text-right">
                <a asp-controller="ApplicationType" asp-action="CreateApplication" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> &nbsp; Create new Application Type
                </a>
            </div>


        </div>

<br/><br/>


    @if (Model.Count() > 0)
    {
        <table class ="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var cat in Model)
                {
                    <tr>
                        <td width="50%">@cat.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else{
        <p> No application type exists.</p>
    }

 </div>

