@model IEnumerable<Order>

@if (Model.Count() > 0)
    {
        <table class ="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Дата заказа
                    </th>
                    <th>
                        Сумма заказа
                    </th>
                    <th>
                        Список заказа
                    </th>
                    <th>
                        Адрес доставки
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var order in Model)
                {
                    <tr>
                        <td width="10%">@order.OrderDate</td>
                        <td width="20%">@order.OrderPrice</td>
                        <td width="50%">@order.OrderList</td>
                        <td width="20%">@order.OrderAddress</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else{
        <p> No category exists.</p>
    }