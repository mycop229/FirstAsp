@using Tor
@model Tor.Models.Product


<link rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css">

<link rel="stylesheet" href="/css/productcard.css" />

<div class ="filter @Model.Category.Name.Replace(' ','_') col-lg-3 col-md-6 col-sm-6 col-xs-6 pb-4">
	<div class="bg-white ">
			

		
		<a target="_blank" asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id">
		<img class="card-img-top img-fluid d-block mx-auto mb-2" src="@WC.ImagePath@Model.Image" alt="Card image cap"/>
		



		<div class="card-body p-1 px-3 row">

			<div class="col-12 brand"><label><span class="h7" style="color:black; margin-bottom: -15px;">@Model.Brand</span></label></div>
			<div class="col-12 desc"><label class="align-items-center">@Model.Name</label></div>
			<div class="col-12 desc"><label><span class="h7" style="color:gray;">@Model.Category.Translate @Model.ApplicationType.Name</span></label></div>
			<div class="col-12 price"><label><span class="h7" >@Model.Price.ToString("c0")</span></label></div>
		</div>
		</a>
	</div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>




