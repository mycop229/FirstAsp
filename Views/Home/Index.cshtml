@model Tor.Models.ViewModels.HomeWM

<link rel="stylesheet" href="/css/carthide.css" />


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block" style="height:600px" src="~/images/product/Skidka.png" alt="First slide">
             <div class="carousel-caption d-none d-md-block">
                <a class="nav-link text-white" asp-controller="MailingList" asp-action="MailingListIndex" style="color: white">Подписаться</a>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" style="height:600px" src="~/images/product/ESHEs.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" style="height:600px" src="~/images/product/a2.JFIF" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

    


<div class="container">
    
	<br />
	<div class="row">
		@foreach(var prod in Model.Products)
		{
			<partial name="_IndividualProductCard" model="prod" />
		}
	</div>
</div>


@section Scripts{
		 <script>
                   let cartt = document.querySelectorAll(".filter");

                   
                   for(let item of cartt){
                       let cart = item.childNodes[1].childNodes[1].childNodes[3];
                       cart.addEventListener("mouseenter",()=>{
                       cart.classList.add("ayes");    
                   })
                   cart.addEventListener("mouseleave", ()=>{
                       cart.classList.remove("ayes");
                   })
                   }

                  

         </script>
}