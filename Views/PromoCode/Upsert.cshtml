@model Tor.Models.ViewModels.PromoCodeVM

@{
	var title = "Добавление промокода";
}

<form asp-action="Upsert" enctype="multipart/form-data" method="post" > 
	@if(Model.PromoСode.Id != 0)
	{
		title = "Изменение промокода";
		<input asp-for="PromoСode.Id" hidden />
	}
	<div class="border p-3">


		<div class="form-group row">
			<h2 class="text-info pl-3">@title</h2>
		</div>

		<div class = "row">

		<div class="col-8"> 

			<div class = "form-group row">
				<div class="col-4">
					<label asp-for="PromoСode.Name"></label>
				</div>
				<div class="col-8">
					<input asp-for="PromoСode.Name" class="form-control"/>
					<span asp-validation-for="PromoСode.Name" class="text-danger"></span>
				</div>
			</div>

			<div class = "form-group row">
				<div class="col-4">
					<label asp-for="PromoСode.Dimension"></label>
				</div>
				<div class="col-8">
					<input asp-for="PromoСode.Dimension" class="form-control"/>
					<span asp-validation-for="PromoСode.Dimension" class="text-danger"></span>
				</div>
			</div>


			<div class = "form-group row">
				<div class="col-4">
					<label asp-for="PromoСode.ValuePromo"></label>
				</div>
				<div class="col-8">
					<input asp-for="PromoСode.ValuePromo" class="form-control"/>
					<span asp-validation-for="PromoСode.ValuePromo" class="text-danger"></span>
				</div>
			</div>

			<div class = "form-group row">
				<div class="col-4">
					<label asp-for="PromoСode.TypePromo"></label>
				</div>
				<div class="col-8">
					<select asp-for="PromoСode.TypePromo" asp-items="@Model.PromoCodeSelectList" class="form-control">
						<option disabled selected>Выберите категорию</option>
					</select>
					<span asp-validation-for="PromoСode.TypePromo" class="text-danger"></span>
				</div>
			</div>

			<div class = "form-group row">
				<div class="col-8 offset-4 row">

				<div class="col">
							@if(Model.PromoСode.Id != 0)
							{
								<input type="submit" class="btn btn-info w-100" value="Обновить"/>
							}
							else
							{
								<input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Добавить"/>
							}
				</div>
				<br/>
				<div class="col">
					<a asp-action="PromoCode" class="btn btn-success w-100"> <i class="fa-solid fa-arrow-right-from-bracket"></i> &nbsp; Назад</a>
				</div>
				</div>
			</div>

		</div>

	</div>

</div>
</form>


@section Scripts{
	
	@{
		<partial name="_ValidationScriptsPartial" />
	}


}