@model IEnumerable<Tor.Models.PromoСode>

 <div class="container p-3">

        <div class="row pt-4">


            <div class="col-6">
                <h2 class="text-primary">Список Промокодов</h2>
            </div>


            <div class="col-6 text-right">
                <a asp-controller="PromoCode" asp-action="Upsert" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> &nbsp; Добавить новый промокод
                </a>
            </div>


        </div>

<br/><br/>


    @if (Model.Count() > 0)
    {
        <table class ="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Остаток
                    </th>
                    <th>
                        Тип
                    </th>
                    <th>
                        Размерность
                    </th>
                    <th>
                        Название
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var cat in Model)
                {
                    <tr>
                        <td width="20%">@cat.ValuePromo</td>
                        <td width="20%">@cat.TypePromo</td>
                        <td width="20%">@cat.Dimension</td>
                        <td width="20%">@cat.Name</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="PromoCode" asp-route-Id="@cat.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                   <i class="fa-solid fa-pen-to-square"></i> Изменить
                                </a>
                                <a asp-controller="PromoCode" asp-route-Id="@cat.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash-can"></i> Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else{
        <p>Промокодов нет</p>
    }

 </div>

