@page
@model IndexModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<link rel="stylesheet" href="/css/tryauthorize.css" />
<link rel="stylesheet" href="/css/login.css" />

<partial name="_StatusMessage" model="Model.StatusMessage" />
              <div class="card-body pl-5 text-black ">
                <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="d-flex align-items-center mb-3 pb-1 mt-10">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="fw-bold mb-0 logotor">Tor</span>
                  </div>
                  <h5 class="login mb-3 pb-3" style="letter-spacing: 1px;">Личный кабинет</h5>
                  <div class="form-outline mb-4">
                    <label asp-for="Username" class="mb-2 enter">Имя пользователя</label>
                    <input asp-for="Username" class="form__input enter mb-4" disabled />
                  </div>
                 <label asp-for="Input.PhoneNumber" class="mb-2 enter">Введите номер телефона</label>
                <input asp-for="Input.PhoneNumber" class="form__input enter" placeholder="Номер телефона"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block mt-3 cusbtn" type="submit">Сохранить</button>  
                  </div>
                  <ul class="nav nav-pills flex-column align-items-center">
                  <li class="nav-item"><a class="nav-link text-dark neakk @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Изменить E-mail адрес</a></li>
                  <li class="nav-item"><a class="nav-link text-dark neakk @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Изменить пароль</a></li>
                  <li class="nav-item"><a class="nav-link text-dark neakk" asp-controller="Order" asp-action="OrderListIndex">История заказов</a></li>
                  </ul>
                </form>
              </div>
              
          


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}