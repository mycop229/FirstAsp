@page
@model RegisterModel

<link rel="stylesheet" href="/css/tryauthorize.css" />


<section class="vh-50 mt-10 " style="background-color: white;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img src="~/images/product/flat.png" width="415" height="673" 
                alt="login form" style="border-radius: 1rem 0 0 1rem;" />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body pl-5 text-black ">

                <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="d-flex align-items-center mb-3 pb-1 mt-10">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0">Tor</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Зарегестрируйте новый аккаунт</h5>

                  <div class="form-outline mb-4">
                    <input asp-for="Input.FullName" id="form2Example17" class="form__input" placeholder="Имя"/>
                    <span asp-validation-for="Input.FullName" class="text-danger" ></span>
                  </div>

                  <div class="form-outline mb-4">
                    <input asp-for="Input.Email" id="form2Example17" class="form__input" placeholder="E-mail"/>
                    <span asp-validation-for="Input.Email" class="text-danger" ></span>
                  </div>

                  <div class="form-outline mb-4">
                    <input asp-for="Input.PhoneNumber" id="form2Example17" class="form__input" placeholder="Номер телефона"/>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger" ></span>
                  </div>

                  <div class="form-outline mb-4">
                    <input asp-for="Input.Password" id="form2Example27" class="form__input" placeholder="Пароль"/>
                    <span asp-validation-for="Input.Password" class="text-danger" placeholder=""></span>
                  </div>

                  <div class="form-outline mb-4">
                    <input asp-for="Input.ConfirmPassword" id="form2Example27" class="form__input" placeholder="Подтверждение пароля"/>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger" placeholder=""></span>
                  </div>


                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Регистрация</button>
                  </div>

                 
                  <p class="mb-5 pb-lg-2" style="color: #393f81;" >Уже есть аккаунт?<a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                      style="color: #393f81;"> Авторизоваться</a></p>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>







@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
